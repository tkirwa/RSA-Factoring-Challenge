#!/usr/bin/env python3

import sys
import math

def factorize(n):
    """
    Factorize a given number n into two smaller factors.
    Returns None if n is prime or a negative number.
    """
    if n <= 1:
        return None
    for i in range(2, int(math.sqrt(n)) + 1):
        if n % i == 0:
            return (i, n // i)
    return None

def main():
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        return
    filename = sys.argv[1]
    with open(filename) as f:
        for line in f:
            n = int(line.strip())
            factors = factorize(n)
            if factors is not None:
                print("{}={}*{}".format(n, factors[0], factors[1]))

if __name__ == "__main__":
    main()
